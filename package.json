{
  "name": "numenera",
  "version": "0.2.0",
  "description": "Numenera Character Sheet - A responsive web application for managing Numenera P&P RPG characters",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "kill": "pkill -9 -f vite || true",
    "test": "npm run test:unit && npm run test:e2e",
    "test:mutation": "stryker run",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:e2e:server": "vite --port 3000",
    "test:e2e:server:prod": "vite preview --port 4173",
    "test:e2e": "concurrently --raw -k -s first -P \"npm:test:e2e:server\" \"wait-on http://localhost:3000 && cucumber-js {@}\" --",
    "test:e2e:current": "concurrently --raw -k -s first \"npm:test:e2e:server\" \"wait-on http://localhost:3000 && cucumber-js tests/e2e/features/**/*.feature --tags '@current'\"",
    "test:e2e:all": "concurrently --raw -k -s first \"npm:test:e2e:server\" \"wait-on http://localhost:3000 && cucumber-js tests/e2e/features/**/*.feature\"",
    "test:e2e:prod": "npm run build && concurrently --raw -k -s first \"npm:test:e2e:server:prod\" \"wait-on http://localhost:4173 && TEST_PROD=true cucumber-js tests/e2e/features/**/*.feature\"",
    "test:e2e:playwright": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "check:i18n": "node scripts/check-translation-coverage.js",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,html}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,html}\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings=-1",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PeregrinTooc/numenera.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/PeregrinTooc/numenera/issues"
  },
  "homepage": "https://github.com/PeregrinTooc/numenera#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "@playwright/test": "^1.58.0",
    "@stryker-mutator/core": "^9.4.0",
    "@stryker-mutator/typescript-checker": "^9.4.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.10",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "fake-indexeddb": "^6.2.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "lit-html": "^3.3.2"
  }
}
